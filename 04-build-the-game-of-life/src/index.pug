#wrapper.wrapper
  .controllers
    .controls
      #play.play(click.delegate="control($event, 'play')" title="Run")
        i.material-icons play_circle_outline
        i.material-icons play_circle_filled
      #pause.pause.selected(click.delegate="control($event, 'pause')" title="Pause")
        i.material-icons pause_circle_outline
        i.material-icons pause_circle_filled
      #clear.clear(click.delegate="control($event, 'clear')" title="Clear Board")
        i.material-icons remove_circle_outline
        i.material-icons remove_circle
      #random.random(click.delegate="control($event, 'random')" title="Random Seed")
        i.material-icons help_outline
        i.material-icons help
    span &nbsp;|&nbsp;
    .speed
      .slow(click.delegate="control($event, 'slow')" title="Slow Speed")
        i.material-icons border_left
      .medium(click.delegate="control($event, 'mediumspeed')" title="Medium Speed")
        i.material-icons border_vertical
      .fast.selected(click.delegate="control($event, 'fast')" title="Fast Speed")
        i.material-icons border_right
    span &nbsp;|&nbsp;
    .size
      .small.selected(click.delegate="control($event, 'small')" title="Small Board")
        i.material-icons border_bottom
      .medium(click.delegate="control($event, 'mediumsize')" title="Medium Board")
        i.material-icons border_horizontal
      .large(click.delegate="control($event, 'large')" title="Large Board")
        i.material-icons border_top
    span &nbsp;|&nbsp;
    .generation(css="display: ${generation === null ? '' : 'block'};") ${generation}

  table#table(css="display: ${board.length === 0 ? '' : 'table'};")
    tbody
      tr(repeat.for="row of board")
        td(repeat.for="column of row" data-row="${$parent.$index}" data-column="${$index}" id="${$parent.$index}-${$index}" data-alive="${column}" click.delegate="selectTile($event)")

